CC = clang++
CFLAGS = -Wall -Wextra -Werror -std=c++98
NAME = zombie
SRC = main.cpp Zombie.cpp newZombie.cpp randomChump.cpp
OBJECTS = $(SRC:.cpp=.o)

all : $(NAME)

$(NAME) : $(OBJECTS)
	$(CC) $(CFLAGS) -o $@ $(OBJECTS)

clean :
	rm -f $(OBJECTS)

fclean : clean
	rm -f $(NAME)

re : fclean all
